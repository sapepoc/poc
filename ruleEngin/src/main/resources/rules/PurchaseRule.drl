package com.rules.counter

import com.sample.model.Purchase;

rule "Purchase over 10 dollars."
when
	$p : Purchase ( total >10 )
then
	$p.setDiscount(0.1);
end

rule "Purchase over 20 dollars."
when
	$p : Purchase ( total >20 )
then
	$p.setDiscount(0.2);
end