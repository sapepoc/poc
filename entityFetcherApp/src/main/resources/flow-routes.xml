<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:camel="http://camel.apache.org/schema/spring"
    xsi:schemaLocation="
       http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    
    <!-- Define all Persistence Routes below in persistenceRoutes routeContext -->
    
    <bean id="fileDetailsLogger" class="org.sapient.fetcher.processors.FileDetailsLogger"/>
    
    <routeContext id="entityFetcherRoutes" xmlns="http://camel.apache.org/schema/spring">
        <route id="entityFetcherRoute" autoStartup="true" >
            <from uri="file:.\\indir?noop=true" />
            <process ref="fileDetailsLogger"/>
            <to uri="activemq:FILE_ENTITIES?maxConcurrentConsumers=1" />
        </route>
    </routeContext>
</beans>
